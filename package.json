{
  "name": "erp_v2_nestjs_api",
  "version": "0.0.1",
  "description": "",
  "author": "Christian Angelo M Sulit",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=8.6.11",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "kysely-codegen": "kysely-codegen"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.2.3",
    "@nestjs/devtools-integration": "^0.1.5",
    "@nestjs/event-emitter": "^2.0.2",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.2.2",
    "@nestjs/schedule": "^3.0.3",
    "@propelauth/node": "^2.1.3",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "husky": "^8.0.3",
    "kysely": "^0.26.1",
    "memphis-dev": "^1.1.2",
    "mssql": "^9.1.3",
    "nestjs-kysely": "^0.1.5",
    "nestjs-zod": "^3.0.0",
    "pg": "^8.11.3",
    "pusher": "^5.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.16",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.2",
    "@types/mssql": "^8.1.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "kysely-codegen": "^0.10.1",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/lib(|/.*)$": "<rootDir>/libs/lib/src/$1",
      "^@app/propelauth(|/.*)$": "<rootDir>/libs/propelauth/src/$1",
      "^@app/kysely-pg(|/.*)$": "<rootDir>/libs/kysely-pg/src/$1"
    }
  }
}
